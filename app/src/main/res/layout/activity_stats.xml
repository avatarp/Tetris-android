<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/chartCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:padding="8dp"
                card_view:cardCornerRadius="4dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_margin="6dp">

                </com.github.mikephil.charting.charts.LineChart>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/scoreCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/staticStatsScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/score" />

                        <TextView
                            android:id="@+id/statsScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"

                            android:layout_margin="8dp"
                            android:text="999"
                            android:textSize="32sp"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/dateCard"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/statsDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="13:01\n24-11-2019"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            tools:ignore="HardcodedText" />

                    </android.widget.RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/info_256" />

                <android.support.v7.widget.CardView
                    android:id="@+id/scoreBlocksCard"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/staticStatsTotalBlocks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Bloków ogółem"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/statsTotalBlocks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"

                            android:layout_margin="8dp"
                            android:text="300"
                            android:textSize="32sp"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/scoreLinesCard"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/staticStatsLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/clearedLines" />

                        <TextView
                            android:id="@+id/statsLines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"

                            android:layout_margin="8dp"
                            android:text="100"
                            android:textSize="32sp"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <android.support.v7.widget.CardView
                    android:id="@+id/movesLeftCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/icon_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icons8_back_64" />

                        <TextView
                            android:id="@+id/movesLeftText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_left"
                            android:layout_centerHorizontal="true"
                            android:text="TEXT"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/movesRightCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/icon_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icons8_next_page_64" />

                        <TextView
                            android:id="@+id/movesRightText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_right"
                            android:layout_centerHorizontal="true"
                            android:text="TEXT"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/rotateLeftCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/icon_rLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icons8_rotate_left" />

                        <TextView
                            android:id="@+id/rotateLeftText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_rLeft"
                            android:layout_centerHorizontal="true"
                            android:text="TEXT"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/rotateRightCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    card_view:cardBackgroundColor="#00aa80"
                    card_view:cardCornerRadius="4dp">


                    <android.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/icon_rRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icons8_rotate_right_64" />

                        <TextView
                            android:id="@+id/rotateRightText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_rRight"
                            android:layout_centerHorizontal="true"
                            android:text="TEXT"
                            tools:ignore="HardcodedText" />
                    </android.widget.RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>